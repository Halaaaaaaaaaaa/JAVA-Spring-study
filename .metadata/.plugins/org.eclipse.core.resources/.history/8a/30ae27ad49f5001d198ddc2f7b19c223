package utils;

/*
	현재 페이지와 관련 정보 저장
	  - 현재 페이지 번호
	  - 페이지당 게시글 게수
*/

public class Criteria {
	private int pageNum;
	private int rowsPerPage;
	
	//생성자 생성
	public Criteria(int pageNum, int rowsPerPage) {
		super();
		this.pageNum = pageNum;
		this.rowsPerPage = rowsPerPage;
	}
	
	// 특정 페이지의 게시글 시작번호
	public int getPageStart() { 
		return (this.page-1) * perPageNum; 
	}

	

}
